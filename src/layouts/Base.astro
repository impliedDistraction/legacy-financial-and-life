---
import SEO from '../components/SEO.astro';
const { title = 'Legacy Financial & Life', description = 'Life insurance and retirement strategies built on clarity and respect.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <SEO title={title} description={description}>
    <link rel="icon" href="/favicon.svg">
  </head>
  <body>
    <main class="min-h-dvh">{Astro.slots.default ? <slot /> : null}</main>
    <script>
      import('../scripts/animations.ts');
    </script>
  </body>
</html>