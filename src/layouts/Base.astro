---
import { site } from '../content/site';
import SEO from '../components/SEO.astro';
const { title = 'Legacy Financial & Life', description = 'Life insurance and retirement strategies built on clarity and respect.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <SEO title={title} description={description} />
    <link rel="icon" href={site.branding.favicon}>
  </head>
  <body class="overflow-x-hidden">
    <main class="min-h-dvh">{Astro.slots.default ? <slot /> : null}</main>
  <script src="/scripts/animations.js" defer></script>
  </body>
</html>