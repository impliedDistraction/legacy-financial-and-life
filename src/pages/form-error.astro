---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { site } from '../content/site';
---

<Base title="Error - Legacy Financial & Life" description="There was an issue submitting your form. Please try again or contact us directly.">
  <Header />
  
  <div class="min-h-screen bg-gradient-to-br from-red-50 to-white flex items-center justify-center px-4">
    <div class="max-w-2xl text-center">
      <!-- Error Icon -->
      <div class="w-24 h-24 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-8 animate-fade-in">
        <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>
      
      <!-- Error Message -->
      <div class="animate-fade-in-up" style="animation-delay: 0.2s;">
        <h1 class="text-4xl font-bold text-slate-900 mb-6">Oops! Something went wrong</h1>
        <p class="text-xl text-slate-700 mb-8">
          We encountered an issue submitting your form. Don't worry - we're here to help!
        </p>
        
        <!-- Alternative Contact Methods -->
        <div class="bg-white rounded-xl border border-slate-200 p-6 mb-8 shadow-lg">
          <h2 class="text-lg font-semibold text-slate-900 mb-4">How to reach us instead:</h2>
          <div class="space-y-4">
            <div class="flex items-center justify-center space-x-3 p-3 bg-brand-50 rounded-lg">
              <svg class="w-5 h-5 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <div>
                <p class="font-medium text-slate-900">Call us directly</p>
                <a href={`tel:${site.phone}`} class="text-brand-600 hover:text-brand-700 font-semibold">{site.phone}</a>
              </div>
            </div>
            
            <div class="flex items-center justify-center space-x-3 p-3 bg-brand-50 rounded-lg">
              <svg class="w-5 h-5 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div>
                <p class="font-medium text-slate-900">Send us an email</p>
                <a href={`mailto:${site.email}`} class="text-brand-600 hover:text-brand-700 font-semibold">{site.email}</a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/#contact" 
            class="rounded-lg bg-brand-600 hover:bg-brand-700 text-white px-6 py-3 font-semibold btn-animate hover-lift"
          >
            Try Again
          </a>
          <a 
            href="/" 
            class="rounded-lg border border-brand-600 text-brand-600 hover:bg-brand-50 px-6 py-3 font-semibold transition-colors"
          >
            Return Home
          </a>
        </div>
        
        <!-- Technical Support -->
        <div class="mt-8 p-4 bg-slate-50 rounded-lg border border-slate-200">
          <p class="text-sm text-slate-600">
            If this problem persists, please mention error code: <span class="font-mono bg-slate-200 px-2 py-1 rounded">FORM_SUBMIT_ERROR_{Math.random().toString(36).substring(2, 8).toUpperCase()}</span> when you contact us.
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <Footer />
</Base>

<script>
  // Track form submission error
  if (typeof gtag !== 'undefined') {
    gtag('event', 'form_error', {
      'event_category': 'engagement',
      'event_label': 'contact_form_error'
    });
  }
</script>