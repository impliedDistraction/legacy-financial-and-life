---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import { site } from '../content/site';
import '../styles/tailwind.css';
---
<Base 
  title={`${site.hiring.title} | ${site.name}`}
  description={site.hiring.subtitle}
>
  <Header />
  <!-- Hero Section -->
  <section class="relative isolate overflow-hidden bg-gradient-to-br from-brand-50 to-white">
    <div class="mx-auto max-w-6xl px-4 py-20 sm:py-28">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight animate-fade-in">
          {site.hiring.hero.heading}
        </h1>
        <p class="mt-6 text-xl text-slate-700 max-w-4xl mx-auto animate-fade-in-up" style="animation-delay: 0.2s;">
          {site.hiring.hero.sub}
        </p>
        <div class="mt-8 animate-fade-in-up" style="animation-delay: 0.4s;">
          <a href="#contact" class="rounded-lg bg-brand-600 hover:bg-brand-700 text-white px-6 py-3 font-semibold btn-animate hover-lift">
            Start Your Career Journey
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Grid -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold scroll-hidden">Why Join Our Team?</h2>
      <p class="mt-4 text-lg text-slate-700 max-w-3xl mx-auto scroll-hidden" style="transition-delay: 0.1s;">
        Access to cutting-edge technology, proven systems, and experienced mentorship
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Experienced Mentorship -->
      <div class="group relative bg-gradient-to-br from-blue-50 to-white rounded-xl border border-slate-200 p-8 hover:shadow-xl hover:border-brand-300 transition-all duration-300 scroll-hidden" style="transition-delay: 0.1s;">
        <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center shadow-lg">
          <span class="text-2xl">👨‍🏫</span>
        </div>
        <div class="text-5xl mb-6 group-hover:scale-110 transition-transform duration-300">👨‍🏫</div>
        <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-brand-700 transition-colors">Experienced Mentorship</h3>
        <p class="text-slate-700 leading-relaxed">Learn from Tim and Beth's 15+ years of combined experience</p>
        <div class="mt-4 pt-4 border-t border-slate-100">
          <div class="text-sm text-blue-600 font-medium">Direct 1:1 guidance</div>
        </div>
      </div>

      <!-- Proven Systems -->
      <div class="group relative bg-gradient-to-br from-green-50 to-white rounded-xl border border-slate-200 p-8 hover:shadow-xl hover:border-brand-300 transition-all duration-300 scroll-hidden" style="transition-delay: 0.2s;">
        <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center shadow-lg">
          <span class="text-2xl">⚙️</span>
        </div>
        <div class="text-5xl mb-6 group-hover:scale-110 transition-transform duration-300">⚙️</div>
        <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-brand-700 transition-colors">Proven Systems</h3>
        <p class="text-slate-700 leading-relaxed">Access to established processes that have generated 300+ policy sales</p>
        <div class="mt-4 pt-4 border-t border-slate-100">
          <div class="text-sm text-green-600 font-medium">300+ policies sold</div>
        </div>
      </div>

      <!-- AI-Powered Tools -->
      <div class="group relative bg-gradient-to-br from-purple-50 to-white rounded-xl border border-slate-200 p-8 hover:shadow-xl hover:border-brand-300 transition-all duration-300 scroll-hidden" style="transition-delay: 0.3s;">
        <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
          <span class="text-lg font-bold text-white">AI</span>
        </div>
        <div class="text-5xl mb-6 group-hover:scale-110 transition-transform duration-300">🤖</div>
        <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-brand-700 transition-colors">AI-Powered Tools</h3>
        <p class="text-slate-700 leading-relaxed">Advanced CRM, automated front office, and AI-driven lead generation</p>
        <div class="mt-4 pt-4 border-t border-slate-100">
          <div class="text-sm text-purple-600 font-medium">Coming Soon</div>
        </div>
      </div>

      <!-- Plan Matching AI -->
      <div class="group relative bg-gradient-to-br from-amber-50 to-white rounded-xl border border-slate-200 p-8 hover:shadow-xl hover:border-brand-300 transition-all duration-300 scroll-hidden" style="transition-delay: 0.4s;">
        <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-amber-500 to-amber-600 rounded-full flex items-center justify-center shadow-lg">
          <span class="text-2xl">🎯</span>
        </div>
        <div class="text-5xl mb-6 group-hover:scale-110 transition-transform duration-300">🎯</div>
        <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-brand-700 transition-colors">Plan Matching AI</h3>
        <p class="text-slate-700 leading-relaxed">Sophisticated software to match clients with optimal insurance solutions</p>
        <div class="mt-4 pt-4 border-t border-slate-100">
          <div class="text-sm text-amber-600 font-medium">Smart matching</div>
        </div>
      </div>

      <!-- Automated Communication -->
      <div class="group relative bg-gradient-to-br from-rose-50 to-white rounded-xl border border-slate-200 p-8 hover:shadow-xl hover:border-brand-300 transition-all duration-300 scroll-hidden" style="transition-delay: 0.5s;">
        <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-rose-500 to-rose-600 rounded-full flex items-center justify-center shadow-lg">
          <span class="text-2xl">📞</span>
        </div>
        <div class="text-5xl mb-6 group-hover:scale-110 transition-transform duration-300">📞</div>
        <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-brand-700 transition-colors">Automated Communication</h3>
        <p class="text-slate-700 leading-relaxed">AI-powered email, text, and call automation to streamline client interaction</p>
        <div class="mt-4 pt-4 border-t border-slate-100">
          <div class="text-sm text-rose-600 font-medium">24/7 automation</div>
        </div>
      </div>

      <!-- Chat Bot Integration -->
      <div class="group relative bg-gradient-to-br from-indigo-50 to-white rounded-xl border border-slate-200 p-8 hover:shadow-xl hover:border-brand-300 transition-all duration-300 scroll-hidden" style="transition-delay: 0.6s;">
        <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-full flex items-center justify-center shadow-lg">
          <span class="text-2xl">💬</span>
        </div>
        <div class="text-5xl mb-6 group-hover:scale-110 transition-transform duration-300">💬</div>
        <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-brand-700 transition-colors">Chat Bot Integration</h3>
        <p class="text-slate-700 leading-relaxed">Lead qualification and initial consultation automation</p>
        <div class="mt-4 pt-4 border-t border-slate-100">
          <div class="text-sm text-indigo-600 font-medium">Smart conversations</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Upline Support Section -->
  <section class="bg-brand-50 py-16">
    <div class="mx-auto max-w-6xl px-4">
      <div class="grid gap-12 lg:grid-cols-2 items-center">
        <div class="scroll-hidden">
          <picture>
            <source
              type="image/webp"
              srcset={`${site.team.headshotSrc}-400w.webp 400w, ${site.team.headshotSrc}-800w.webp 800w, ${site.team.headshotSrc}-1200w.webp 1200w`}
            />
            <img
              src={`${site.team.headshotSrc}-800w.jpg`}
              srcset={`${site.team.headshotSrc}-400w.jpg 400w, ${site.team.headshotSrc}-800w.jpg 800w, ${site.team.headshotSrc}-1200w.jpg 1200w`}
              alt={site.team.headshotAlt}
              class="rounded-2xl shadow-xl border border-slate-200 w-full hover-scale"
              sizes="(max-width: 640px) 90vw, (max-width: 1024px) 45vw, 500px"
            />
          </picture>
        </div>
        <div class="scroll-hidden" style="transition-delay: 0.2s;">
          <h2 class="text-3xl font-bold text-slate-900 mb-6">
            {site.hiring.uplineSupport.title}
          </h2>
          <p class="text-lg text-slate-700 mb-6">
            {site.hiring.uplineSupport.description}
          </p>
          <ul class="space-y-3">
            {site.hiring.uplineSupport.features.map((feature) => (
              <li class="flex gap-3">
                <span class="text-brand-600" aria-hidden="true">✓</span>
                <span class="text-slate-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Technology & Innovation -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold scroll-hidden">Advanced Technology Stack</h2>
      <p class="mt-4 text-lg text-slate-700 scroll-hidden" style="transition-delay: 0.1s;">
        Be among the first to leverage cutting-edge AI tools for insurance sales
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2">
      <div class="bg-gradient-to-br from-brand-600 to-brand-700 rounded-xl p-8 text-white scroll-hidden" style="transition-delay: 0.1s;">
        <h3 class="text-2xl font-bold mb-4">🤖 AI-Powered CRM (Coming Soon)</h3>
        <p class="text-brand-100 mb-4">
          Intelligent customer relationship management with automated lead scoring, 
          follow-up reminders, and personalized communication strategies.
        </p>
        <ul class="space-y-2 text-brand-100">
          <li>• Automated lead qualification</li>
          <li>• Smart follow-up sequences</li>
          <li>• Predictive analytics</li>
        </ul>
      </div>

      <div class="bg-gradient-to-br from-brand-500 to-brand-600 rounded-xl p-8 text-white scroll-hidden" style="transition-delay: 0.2s;">
        <h3 class="text-2xl font-bold mb-4">🎯 Plan Matching AI</h3>
        <p class="text-brand-100 mb-4">
          Sophisticated algorithms that analyze client profiles and recommend 
          optimal insurance solutions with unprecedented accuracy.
        </p>
        <ul class="space-y-2 text-brand-100">
          <li>• Risk assessment automation</li>
          <li>• Product recommendation engine</li>
          <li>• Needs analysis optimization</li>
        </ul>
      </div>

      <div class="bg-gradient-to-br from-brand-700 to-brand-800 rounded-xl p-8 text-white scroll-hidden" style="transition-delay: 0.3s;">
        <h3 class="text-2xl font-bold mb-4">📞 Communication Automation</h3>
        <p class="text-brand-100 mb-4">
          AI-driven email, text, and call automation that maintains personal 
          touch while scaling your outreach capabilities.
        </p>
        <ul class="space-y-2 text-brand-100">
          <li>• Personalized email campaigns</li>
          <li>• Smart text messaging</li>
          <li>• Automated appointment scheduling</li>
        </ul>
      </div>

      <div class="bg-gradient-to-br from-brand-600 to-brand-800 rounded-xl p-8 text-white scroll-hidden" style="transition-delay: 0.4s;">
        <h3 class="text-2xl font-bold mb-4">💬 Intelligent Chat Bots</h3>
        <p class="text-brand-100 mb-4">
          24/7 lead capture and initial consultation automation with natural 
          language processing for seamless client interactions.
        </p>
        <ul class="space-y-2 text-brand-100">
          <li>• Initial needs assessment</li>
          <li>• Appointment booking</li>
          <li>• FAQ automation</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Success Metrics -->
  <section class="bg-slate-900 py-16">
    <div class="mx-auto max-w-6xl px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white scroll-hidden">Proven Track Record</h2>
        <p class="mt-4 text-lg text-slate-300 scroll-hidden" style="transition-delay: 0.1s;">
          Join a team with demonstrated success and established systems
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-3 text-center">
        <div class="scroll-hidden" style="transition-delay: 0.1s;">
          <div class="text-4xl font-bold text-brand-400 mb-2">$75M+</div>
          <div class="text-lg text-white mb-2">Assets Managed</div>
          <div class="text-slate-400">Institutional-level experience</div>
        </div>
        <div class="scroll-hidden" style="transition-delay: 0.2s;">
          <div class="text-4xl font-bold text-brand-400 mb-2">300+</div>
          <div class="text-lg text-white mb-2">Policies Sold</div>
          <div class="text-slate-400">In just two years</div>
        </div>
        <div class="scroll-hidden" style="transition-delay: 0.3s;">
          <div class="text-4xl font-bold text-brand-400 mb-2">15+</div>
          <div class="text-lg text-white mb-2">Years Experience</div>
          <div class="text-slate-400">Combined team expertise</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Career Path -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold scroll-hidden">Your Career Path</h2>
      <p class="mt-4 text-lg text-slate-700 max-w-3xl mx-auto scroll-hidden" style="transition-delay: 0.1s;">
        Structured progression with clear milestones and increasing autonomy
      </p>
    </div>

    <!-- Timeline container -->
    <div class="relative">
      <!-- Timeline line -->
      <div class="hidden md:block absolute top-20 left-0 w-full h-0.5 bg-gradient-to-r from-brand-200 via-brand-500 to-brand-200"></div>
      
      <div class="grid gap-12 md:grid-cols-4">
        <!-- Step 1: Onboarding -->
        <div class="relative text-center scroll-hidden" style="transition-delay: 0.1s;">
          <div class="relative mb-8">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mx-auto shadow-xl hover:scale-110 transition-transform duration-300">
              <span class="text-2xl font-bold text-white">1</span>
            </div>
            <!-- Step indicator -->
            <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-3 h-3 bg-green-400 rounded-full"></div>
          </div>
          <div class="bg-white rounded-xl p-6 shadow-lg border border-slate-100 hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-lg font-bold text-slate-900 mb-3">Onboarding</h3>
            <p class="text-slate-700 text-sm leading-relaxed mb-4">
              Comprehensive training on products, systems, and our proven sales methodology.
            </p>
            <div class="inline-flex items-center text-xs text-green-600 bg-green-50 px-3 py-1 rounded-full">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
              Weeks 1-2
            </div>
          </div>
        </div>

        <!-- Step 2: Mentorship -->
        <div class="relative text-center scroll-hidden" style="transition-delay: 0.2s;">
          <div class="relative mb-8">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto shadow-xl hover:scale-110 transition-transform duration-300">
              <span class="text-2xl font-bold text-white">2</span>
            </div>
            <!-- Step indicator -->
            <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-3 h-3 bg-blue-400 rounded-full"></div>
          </div>
          <div class="bg-white rounded-xl p-6 shadow-lg border border-slate-100 hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-lg font-bold text-slate-900 mb-3">Mentorship</h3>
            <p class="text-slate-700 text-sm leading-relaxed mb-4">
              Direct mentoring with Tim & Beth, shadowing calls, and hands-on guidance.
            </p>
            <div class="inline-flex items-center text-xs text-blue-600 bg-blue-50 px-3 py-1 rounded-full">
              <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
              Months 1-3
            </div>
          </div>
        </div>

        <!-- Step 3: Independence -->
        <div class="relative text-center scroll-hidden" style="transition-delay: 0.3s;">
          <div class="relative mb-8">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto shadow-xl hover:scale-110 transition-transform duration-300">
              <span class="text-2xl font-bold text-white">3</span>
            </div>
            <!-- Step indicator -->
            <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-3 h-3 bg-purple-400 rounded-full"></div>
          </div>
          <div class="bg-white rounded-xl p-6 shadow-lg border border-slate-100 hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-lg font-bold text-slate-900 mb-3">Independence</h3>
            <p class="text-slate-700 text-sm leading-relaxed mb-4">
              Gradual transition to independent operation with ongoing support and resources.
            </p>
            <div class="inline-flex items-center text-xs text-purple-600 bg-purple-50 px-3 py-1 rounded-full">
              <span class="w-2 h-2 bg-purple-500 rounded-full mr-2"></span>
              Months 3-6
            </div>
          </div>
        </div>

        <!-- Step 4: Leadership -->
        <div class="relative text-center scroll-hidden" style="transition-delay: 0.4s;">
          <div class="relative mb-8">
            <div class="w-16 h-16 bg-gradient-to-br from-amber-500 to-amber-600 rounded-full flex items-center justify-center mx-auto shadow-xl hover:scale-110 transition-transform duration-300">
              <span class="text-2xl font-bold text-white">4</span>
            </div>
            <!-- Step indicator -->
            <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-3 h-3 bg-amber-400 rounded-full"></div>
          </div>
          <div class="bg-white rounded-xl p-6 shadow-lg border border-slate-100 hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-lg font-bold text-slate-900 mb-3">Leadership</h3>
            <p class="text-slate-700 text-sm leading-relaxed mb-4">
              Opportunity to recruit and mentor your own team members as you grow.
            </p>
            <div class="inline-flex items-center text-xs text-amber-600 bg-amber-50 px-3 py-1 rounded-full">
              <span class="w-2 h-2 bg-amber-500 rounded-full mr-2"></span>
              6+ months
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-brand-600 py-16">
    <div class="mx-auto max-w-4xl px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">
        Ready to Launch Your Insurance Career?
      </h2>
      <p class="text-xl text-brand-100 mb-8">
        Join Tim & Beth Byrd and gain access to proven systems, cutting-edge technology, and experienced mentorship.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#contact" class="rounded-lg bg-white text-brand-600 hover:bg-brand-50 px-8 py-4 font-semibold btn-animate hover-lift">
          Apply to Join Our Team
        </a>
        <a href="tel:(XXX) XXX-XXXX" class="rounded-lg border-2 border-white text-white hover:bg-white hover:text-brand-600 px-8 py-4 font-semibold btn-animate">
          Call to Learn More
        </a>
      </div>
    </div>
  </section>

  <ContactForm />
  <Footer />
</Base>