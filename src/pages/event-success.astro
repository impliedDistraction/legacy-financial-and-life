---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { site } from '../content/site';
import '../styles/tailwind.css';
---

<Base 
  title="Event Registration Confirmed â€” Legacy Financial & Life" 
  description="Thank you for registering for our Wills & Living Trusts educational event. We look forward to seeing you there!"
>
  <Header />
  
  <div class="min-h-screen bg-gradient-to-br from-brand-50 to-white flex items-center justify-center py-12 px-4">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Success Icon -->
      <div class="animate-fade-in-up mb-8">
        <div class="mx-auto w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mb-6">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>

      <!-- Success Message -->
      <div class="animate-fade-in-up" style="animation-delay: 0.2s;">
        <h1 class="text-4xl font-bold text-slate-900 mb-6">You're Registered!</h1>
        <p class="text-xl text-slate-700 mb-8">
          Thank you for registering for our <strong>{site.event.title}</strong> educational event. 
          We'll send you a confirmation email shortly with all the details.
        </p>
        
        <!-- Event Reminder Card -->
        <div class="bg-white rounded-xl border border-slate-200 p-6 mb-8 shadow-lg">
          <h2 class="text-lg font-semibold text-slate-900 mb-4">Event Details Reminder</h2>
          <div class="grid sm:grid-cols-3 gap-4 text-center">
            <div>
              <div class="text-brand-600 font-medium text-sm uppercase tracking-wide">Date</div>
              <div class="text-slate-900 font-bold text-lg">{site.event.date}</div>
            </div>
            <div>
              <div class="text-brand-600 font-medium text-sm uppercase tracking-wide">Time</div>
              <div class="text-slate-900 font-bold text-lg">{site.event.time}</div>
            </div>
            <div>
              <div class="text-brand-600 font-medium text-sm uppercase tracking-wide">Location</div>
              <div class="text-slate-900 font-bold text-lg">{site.event.location}</div>
            </div>
          </div>
        </div>
        
        <!-- What's Next Section -->
        <div class="bg-white rounded-xl border border-slate-200 p-6 mb-8 shadow-lg">
          <h2 class="text-lg font-semibold text-slate-900 mb-4">What happens next?</h2>
          <div class="space-y-3 text-left">
            <div class="flex items-start space-x-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-100 rounded-full flex items-center justify-center text-sm font-medium text-brand-700">1</span>
              <p class="text-slate-700">You'll receive a confirmation email with the specific venue address and parking information</p>
            </div>
            <div class="flex items-start space-x-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-100 rounded-full flex items-center justify-center text-sm font-medium text-brand-700">2</span>
              <p class="text-slate-700">We'll send you a reminder email 24 hours before the event</p>
            </div>
            <div class="flex items-start space-x-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-100 rounded-full flex items-center justify-center text-sm font-medium text-brand-700">3</span>
              <p class="text-slate-700">Arrive a few minutes early to get settled and pick up your free educational materials</p>
            </div>
          </div>
        </div>
        
        <!-- Contact Info -->
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-8">
          <p class="text-amber-800 text-sm">
            <strong>Questions or need to update your registration?</strong> Call us at 
            <a href={`tel:${site.phone}`} class="underline hover:text-amber-900">{site.phone}</a>
            or email <a href={`mailto:${site.email}`} class="underline hover:text-amber-900">{site.email}</a>
          </p>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/" 
            class="rounded-lg bg-brand-600 hover:bg-brand-700 text-white px-6 py-3 font-semibold btn-animate hover-lift"
          >
            Return Home
          </a>
          <a 
            href="/wills-trusts-event" 
            class="rounded-lg border border-brand-600 text-brand-600 hover:bg-brand-50 px-6 py-3 font-semibold transition-colors"
          >
            View Event Details
          </a>
          <a 
            href="/schedule" 
            class="rounded-lg border border-slate-300 text-slate-600 hover:bg-slate-50 px-6 py-3 font-semibold transition-colors"
          >
            Schedule a Consultation
          </a>
        </div>
      </div>

      <!-- Additional Information -->
      <div class="mt-12 text-center">
        <div class="bg-brand-50 rounded-lg p-6 border border-brand-200">
          <h3 class="text-lg font-semibold text-brand-900 mb-2">Interested in a Personal Consultation?</h3>
          <p class="text-brand-800 mb-4">
            After the event, you can schedule a one-on-one consultation with Tim and Beth to discuss your specific estate planning needs.
          </p>
          <a 
            href="/schedule" 
            class="inline-block text-brand-700 hover:text-brand-800 font-medium underline"
          >
            Learn more about our consultation services
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <Footer />
</Base>

<script>
  // Track successful event registration
  if (typeof gtag !== 'undefined') {
    gtag('event', 'event_registration', {
      'event_category': 'engagement',
      'event_label': 'wills_trusts_event_success'
    });
  }

  // Store event registration success for potential follow-up
  sessionStorage.setItem('event_registration_success', 'true');
  sessionStorage.setItem('event_name', 'Wills & Living Trusts');
</script>