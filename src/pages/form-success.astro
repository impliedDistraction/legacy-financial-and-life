---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { site } from '../content/site';
---

<Base title="Thank You - Legacy Financial & Life" description="Thank you for contacting Legacy Financial & Life. We'll be in touch soon.">
  <Header />
  
  <div class="min-h-screen bg-gradient-to-br from-brand-50 to-white flex items-center justify-center px-4">
    <div class="max-w-2xl text-center">
      <!-- Success Icon -->
      <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-8 animate-fade-in">
        <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      
      <!-- Success Message -->
      <div class="animate-fade-in-up" style="animation-delay: 0.2s;">
        <h1 class="text-4xl font-bold text-slate-900 mb-6">Thank You!</h1>
        <p class="text-xl text-slate-700 mb-8">
          Your message has been received successfully. We'll get back to you within 24 hours.
        </p>
        
        <!-- Contact Information -->
        <div class="bg-white rounded-xl border border-slate-200 p-6 mb-8 shadow-lg">
          <h2 class="text-lg font-semibold text-slate-900 mb-4">What happens next?</h2>
          <div class="space-y-3 text-left">
            <div class="flex items-start space-x-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-100 rounded-full flex items-center justify-center text-sm font-medium text-brand-700">1</span>
              <p class="text-slate-700">We'll review your inquiry and match you with the right insurance solutions</p>
            </div>
            <div class="flex items-start space-x-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-100 rounded-full flex items-center justify-center text-sm font-medium text-brand-700">2</span>
              <p class="text-slate-700">Tim or Beth will personally reach out to schedule your consultation</p>
            </div>
            <div class="flex items-start space-x-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-100 rounded-full flex items-center justify-center text-sm font-medium text-brand-700">3</span>
              <p class="text-slate-700">We'll create a customized plan that fits your needs and budget</p>
            </div>
          </div>
        </div>
        
        <!-- Emergency Contact -->
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-8">
          <p class="text-amber-800 text-sm">
            <strong>Need immediate assistance?</strong> Call us directly at 
            <a href={`tel:${site.phone}`} class="underline hover:text-amber-900">{site.phone}</a>
          </p>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/" 
            class="rounded-lg bg-brand-600 hover:bg-brand-700 text-white px-6 py-3 font-semibold btn-animate hover-lift"
          >
            Return Home
          </a>
          <a 
            href="/#services" 
            class="rounded-lg border border-brand-600 text-brand-600 hover:bg-brand-50 px-6 py-3 font-semibold transition-colors"
          >
            Learn About Our Services
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <Footer />
</Base>

<script>
  // Track successful form submission
  if (typeof gtag !== 'undefined') {
    gtag('event', 'form_submit', {
      'event_category': 'engagement',
      'event_label': 'contact_form_success'
    });
  }
</script>