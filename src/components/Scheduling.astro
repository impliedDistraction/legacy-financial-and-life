---
import { site } from '../content/site';

// Derive Calendly settings from site content
const calendlyUrl = site.scheduling?.calendlyUrl || 'https://calendly.com/bethandtim-legacy';
const brandColor = site.scheduling?.brandColor || '#1a62db';
---

<section id="schedule" class="mx-auto max-w-6xl px-4 py-12 sm:py-16">
  <div class="text-center mb-8">
    <h2 class="text-2xl sm:text-3xl font-bold">Schedule Your Free Consultation</h2>
    <p class="mt-2 text-slate-700">Choose a convenient time to discuss your insurance and financial planning needs with Tim and Beth</p>
  </div>

  <div class="grid gap-8 lg:grid-cols-2 items-start">
    <!-- Scheduling Widget Column -->
    <div class="rounded-2xl border border-slate-200 p-6 sm:p-8 hover-lift">
      <h3 class="text-xl font-semibold mb-4">Book Your Appointment</h3>
      
      <!-- Calendly Scheduling Widget -->
      <div class="calendly-scheduling-container rounded-lg border border-slate-200 overflow-hidden bg-white">
        <!-- Calendly Embed -->
        <div class="calendly-inline-widget" data-url={calendlyUrl} style="min-width:320px;height:660px;"></div>
        
        <!-- Fallback Content (shown when Calendly is not available) -->
        <div class="calendly-fallback space-y-6" style="display: none;">
          <div class="text-center py-8">
            <div class="w-16 h-16 bg-brand-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-semibold text-slate-800 mb-2">Schedule Your Consultation</h4>
            <p class="text-slate-600 mb-6">Click the button below to open our scheduling page</p>
          </div>
          
          <!-- Direct Calendly Link -->
          <div class="space-y-3">
            <a href={calendlyUrl} target="_blank" rel="noopener noreferrer" class="block w-full text-left border border-slate-200 rounded-lg p-4 hover:bg-slate-50 transition-colors cursor-pointer group">
              <div class="flex justify-between items-start">
                <div>
                  <h5 class="font-semibold text-slate-800 group-hover:text-slate-900">Schedule with Tim & Beth</h5>
                  <p class="text-sm text-slate-600 mt-1">Open our Calendly page to pick a time that works for you</p>
                  <div class="flex items-center mt-2 text-sm text-slate-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    30â€“60 minutes
                  </div>
                </div>
                <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full">Free</span>
              </div>
            </a>
          </div>
          
          <!-- Contact CTA -->
          <div class="bg-brand-50 rounded-lg p-4 text-center">
            <p class="text-brand-800 text-sm mb-3">Ready to schedule? Contact us directly:</p>
            <div class="flex flex-col sm:flex-row gap-2 justify-center">
              <a href={`tel:${site.phone}`} class="bg-brand-600 hover:bg-brand-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                Call {site.phone}
              </a>
              <a href={`mailto:${site.email}`} class="bg-white border border-brand-200 text-brand-700 hover:bg-brand-50 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                Email {site.email}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Information Column -->
    <div class="space-y-6">
      <div class="rounded-2xl border border-slate-200 p-6 hover-lift">
        <h3 class="text-xl font-semibold mb-4 flex items-center">
          <svg class="w-5 h-5 text-brand-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          What to Expect
        </h3>
        <ul class="space-y-3 text-slate-700">
          <li class="flex items-start">
            <span class="w-2 h-2 bg-brand-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            <span>No pressure, educational consultation focused on your needs</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-brand-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            <span>Review of your current financial situation and goals</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-brand-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            <span>Discussion of insurance options that fit your budget</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-brand-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            <span>Answers to all your questions about life insurance and retirement planning</span>
          </li>
        </ul>
      </div>

      <div class="rounded-2xl border border-slate-200 p-6 hover-lift">
        <h3 class="text-xl font-semibold mb-4 flex items-center">
          <svg class="w-5 h-5 text-brand-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Meeting Options
        </h3>
        <div class="space-y-3">
          <div class="flex items-center">
            <svg class="w-4 h-4 text-brand-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="text-slate-700">Phone Consultation</span>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 text-brand-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            <span class="text-slate-700">Video Call (Zoom/Teams)</span>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 text-brand-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <span class="text-slate-700">In-Person (Luthersville, GA area)</span>
          </div>
        </div>
      </div>

      <div class="rounded-2xl bg-brand-50 border border-brand-200 p-6">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-brand-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h4 class="font-semibold text-brand-800 mb-1">Prefer to call directly?</h4>
            <p class="text-sm text-brand-700 mb-2">
              You can also reach Tim and Beth directly at <a href={`tel:${site.phone}`} class="font-medium underline hover:text-brand-800">{site.phone}</a> or email <a href={`mailto:${site.email}`} class="font-medium underline hover:text-brand-800">{site.email}</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Custom Styling for Calendly Embed -->
<style>
  .calendly-scheduling-container {
    background: white;
    position: relative;
  }
  
  /* Custom styling to match site branding */
  .calendly-scheduling-container iframe {
    border-radius: 8px;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .calendly-scheduling-container {
      margin: -1rem;
      border-radius: 0;
    }
    
    .calendly-inline-widget {
      min-width: 280px !important;
    }
  }
</style>

<!-- Calendly Integration Script -->
<script>
  // Load Calendly embed script
  const script = document.createElement('script');
  script.src = 'https://assets.calendly.com/assets/external/widget.js';
  script.async = true;
  script.defer = true;

  script.onload = function() {
    console.log('Calendly embed script loaded');
    
    // Track successful bookings if analytics available
    if (typeof gtag !== 'undefined') {
      // Listen for Calendly events
      window.addEventListener('message', function(e) {
        if (e.data.event && e.data.event.indexOf('calendly') === 0) {
          if (e.data.event === 'calendly.event_scheduled') {
            gtag('event', 'schedule_consultation', {
              event_category: 'engagement',
              event_label: 'calendly_booking'
            });
          }
        }
      });
    }
  };

  script.onerror = function() {
    console.log('Calendly embed script failed to load, showing fallback content');
    const fallback = document.querySelector('.calendly-fallback');
    const widget = document.querySelector('.calendly-inline-widget');
    if (fallback && widget) {
      widget.style.display = 'none';
      fallback.style.display = 'block';
    }
  };

  document.head.appendChild(script);
</script>