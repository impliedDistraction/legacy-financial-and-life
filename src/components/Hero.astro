---
import { site } from '../content/site';
---
<section class="relative isolate overflow-hidden">
  <div class="mx-auto max-w-6xl px-4 py-20 sm:py-28">
    <p class="text-brand-700 font-semibold animate-fade-in">{site.tagline}</p>
    <h1 class="mt-2 text-4xl sm:text-5xl font-extrabold tracking-tight animate-fade-in-up" style="animation-delay: 0.2s;">{site.hero.heading}</h1>
    <p class="mt-4 max-w-2xl text-lg text-slate-700 animate-fade-in-up" style="animation-delay: 0.4s;">{site.hero.sub}</p>
    <div class="mt-8 flex gap-3 animate-fade-in-up" style="animation-delay: 0.6s;">
      <a href="#contact" class="rounded-lg bg-brand-600 hover:bg-brand-700 text-white px-5 py-3 font-semibold btn-animate hover-lift">
        {site.hero.cta}
      </a>
      <a href="#plans" class="rounded-lg border border-slate-300 px-5 py-3 font-semibold hover:border-slate-400 hover-lift">
        View Plans
      </a>
    </div>
  </div>
</section>