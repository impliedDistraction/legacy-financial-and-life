---
import { site } from '../content/site';
---
<header class="sticky top-0 z-40 bg-white/85 backdrop-blur border-b border-slate-200">
  <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 hover-scale">
      <img src={site.branding.logo} alt="" class="h-8 w-8 rounded">
      <span class="font-semibold">{site.name}</span>
    </a>
    <nav class="hidden sm:flex gap-6">
      <a href="#plans" class="hover:text-brand-700 transition-colors">Plans</a>
      <a href="#retirement" class="hover:text-brand-700 transition-colors">Retirement</a>
      <a href="#team" class="hover:text-brand-700 transition-colors">Team</a>
      <a href="#contact" class="hover:text-brand-700 transition-colors">Contact</a>
    </nav>
    <a href="#contact" class="ml-4 inline-block rounded-lg bg-brand-600 hover:bg-brand-700 text-white px-4 py-2 text-sm font-semibold btn-animate hover-lift">
      {site.hero.cta}
    </a>
  </div>
</header>