---
import { site } from '../content/site';
---
<section id="contact" class="mx-auto max-w-6xl px-4 py-12 sm:py-16">
  <div class="rounded-2xl border border-slate-200 p-6 sm:p-8 hover-lift scroll-hidden">
    <h2 class="text-2xl sm:text-3xl font-bold">{site.cta.heading}</h2>
    <p class="mt-2 text-slate-700">{site.cta.sub}</p>

    <form class="mt-6 grid gap-4 sm:grid-cols-2" action="https://formspree.io/f/your-form-id" method="POST">
      <label class="grid gap-1">
        <span class="text-sm font-medium">Full name</span>
        <input name="name" required class="rounded-lg border border-slate-300 px-3 py-2 transition-all hover:border-brand-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200">
      </label>
      <label class="grid gap-1">
        <span class="text-sm font-medium">Email</span>
        <input type="email" name="email" required class="rounded-lg border border-slate-300 px-3 py-2 transition-all hover:border-brand-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200">
      </label>
      <label class="grid gap-1 sm:col-span-2">
        <span class="text-sm font-medium">How can we help?</span>
        <textarea name="message" rows="4" class="rounded-lg border border-slate-300 px-3 py-2 transition-all hover:border-brand-300 focus:border-brand-500 focus:ring-2 focus:ring-brand-200"></textarea>
      </label>

      <div class="sm:col-span-2 flex items-center justify-between">
        <div class="text-sm text-slate-600">
          Or reach us at <a class="underline hover:text-brand-700 transition-colors" href={`mailto:${site.email}`}>{site.email}</a> Â· {site.phone}
        </div>
        <button type="submit" class="rounded-lg bg-brand-600 hover:bg-brand-700 text-white px-4 py-2 font-semibold btn-animate hover-lift">
          {site.cta.button}
        </button>
      </div>
      <input type="hidden" name="_subject" value="Legacy F&L Website Inquiry">
    </form>
  </div>

  <p class="mt-4 text-xs text-slate-500">{site.footerNote}</p>
</section>